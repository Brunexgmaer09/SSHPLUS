// ==UserScript==
// @name         LMSYS Test Script
// @namespace    http://tampermonkey.net/
// @version      0.1
// @description  Test script for Android
// @author       You
// @match        https://lmarena.ai/*
// @match        *://lmarena.ai/*
// @grant        none
// @run-at       document-start
// ==/UserScript==

(function() {
    'use strict';

    function addTestElement() {
        const div = document.createElement('div');
        div.innerHTML = 'TESTE ANDROID';
        div.style.cssText = `
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: red;
            color: white;
            padding: 20px;
            font-size: 24px;
            text-align: center;
            z-index: 999999;
        `;
        document.documentElement.appendChild(div);
    }

    // Tentar v√°rias vezes
    addTestElement();
    setTimeout(addTestElement, 1000);
    setTimeout(addTestElement, 2000);
    setTimeout(addTestElement, 3000);

    // Tentar em diferentes eventos
    document.addEventListener('DOMContentLoaded', addTestElement);
    window.addEventListener('load', addTestElement);
})();
